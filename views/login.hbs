<div class="mt-5 container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body bg-light">
        <h1 class="mt-3 text-center">Login</h1>
        {{> message}}
        <form action="/users/login" method="POST" class="mt-3">
          <div class="mb-3">
            <label for="email" class="red-spot mb-2">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 電子信箱" maxlength="128">
          </div>
          <div class="mb-3">
            <label for="password" class="red-spot mb-2">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="請輸入 密碼" minlength="6" maxlength="30">
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">Login</button>
            <a href="/auth/facebook" class="btn btn-primary">Facebook</a>
          </div>
        </form>
        <p class="mt-4 lead">
          No Account? <a href="/users/register" style="text-decoration: none;"> >> Register</a>
        </p>
      </div>
    </div>
  </div>
</div>