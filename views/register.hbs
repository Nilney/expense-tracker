<div class="mt-5 container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body bg-light">
        <h1 class="mt-3 text-center">Register</h1>
        <form action="/users/register" method="POST" class="mt-3">
          <div class="mb-3">
            <label for="name" class="red-spot mb-2">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="請輸入 名稱 (20字元內)" maxlength="20">
          </div>
          <div class="mb-3">
            <label for="email" class="red-spot mb-2">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 電子信箱">
          </div>
          <div class="mb-3">
            <label for="password" class="red-spot mb-2">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="請輸入 密碼 (6 ~ 30位數)" minlength="6" maxlength="30">
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="red-spot mb-2">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請確認 密碼" minlength="6" maxlength="30">
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">Register</button>
          </div>
        </form>
        <p class="mt-4 lead">
          Have An Account? <a href="/users/login" style="text-decoration: none;"> >> Login</a>
        </p>
      </div>
    </div>
  </div>
</div>